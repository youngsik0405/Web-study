		$(".btn").click(function()
		{
			var item = $("#item").val();		//-- 제목
			var week = $("#week").val();		//-- 요일
			var start = $("#start").val();		//-- 시작시간
			var end = $("#end").val();			//-- 종료시간
			var color = $("#color").val();		//-- 색상
			
			// javascript 로 처리했던 기능을 jQuery 로 구성하면 더 간단하다.
			// 1. 모든 tr들 중 원하는 행(tr)을 찾고(→ eq())
			// 2. 그렇게 찾은 tr 의 자식 td들 중   (→ children())
			//    원하는 td를 찾아서(→ eq()) 텍스트를 삽입(→ text())하고
			//    색상을 바꾼다.(→ css())
			
			for (var i=start; i<=end; i++)
			{
				// 확인
				//alert(i);
				
				// 확인
				//$("#list tr").eq(i).text("선택");
				
				// 확인
				//$("#list tr").eq(i).text(item);	//--==>> tr 자체가 item으로 바뀜
				
				// 확인
				//$("#list tr").eq(i).children().text(item); 	//--==>> 모든 요일의 td들이 각각 item으로 바뀜
				
				// 확인
				//$("#list tr").eq(i).children().eq(1).text(item);		//--==>> 월요일의 td들이 바뀜
				
				// 확인
				//$("#list tr").eq(i).children().eq(2).text(item);		//--==>> 화요일의 td들이 바뀜
				
				// 확인
				//$("#list tr").eq(i).children().eq(week).text(item);
				
				// 확인
				$("#list tr").eq(i).children().eq(week).css("background-color", color).text(item);
				
			}
		})	
	});

</script>
