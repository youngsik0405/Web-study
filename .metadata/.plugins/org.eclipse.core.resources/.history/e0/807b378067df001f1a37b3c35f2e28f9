	function loadXMLDoc()
	{
		// 확인
		alert("함수 호출 확인~!!!");
		
		var xmlHttp;
		
		if (window.XMLHttpRequest)
		{
			// 확인
			alert("XMLHttpRequest 지원 브라우저~!!!");
		}
		else
		{
			// 확인
			alert("XMLHttpRequest 미지원 브라우저~!!!");
			
			
		}
	}

</script>
